<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip" >
    
    <TextView 
        android:id="@+id/hint_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginRight="4dip"
        android:text="当前ip地址："/>
    
    <TextView 
        android:id="@+id/hint_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_below="@id/hint_ip"
        android:layout_marginRight="4dip"
        android:singleLine="true"
        android:text="端口号："/>
    
    <TextView 
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/hint_port"
        android:layout_alignTop="@id/hint_port"
        android:text="127.99.32.90"/>
    
    <TextView 
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/hint_ip"
        android:layout_alignTop="@id/hint_ip"
        android:layout_alignRight="@id/port"
        android:text="127.99.32.90"/>
    

</RelativeLayout>
